<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androidapp.com.stalwartsecurity.Fragment.AttendanceIn">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:id="@+id/card1"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/build_name"
                    android:layout_marginLeft="10dp"
                    android:text="Appt Name/Societyname/Office Name"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/build_name"
                    android:text="Address"
                    android:id="@+id/add"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="ETA : 18:15"
                    android:id="@+id/entry_time"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add"
                    android:layout_toRightOf="@id/entry_time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Off time : 12:00"
                    android:textColor="@color/green"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/button_selector_qa"
            android:layout_below="@id/card1"
            android:text="IN"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</FrameLayout>
