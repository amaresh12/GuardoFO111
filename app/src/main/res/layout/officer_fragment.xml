<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ofcr_layout">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ofcr_rason_form"
            android:layout_centerInParent="true"
            android:visibility="gone">
            <include android:id="@+id/ofcr_rason"
                layout="@layout/ofcr_reason"></include>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ofcr_ratings_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enter your Report here."
                android:layout_marginLeft="20dp"
                android:id="@+id/txt_fdbck"/>
        <EditText
            android:id="@+id/text_area"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:maxLength="200"
            android:paddingLeft="2dp"
            android:layout_below="@+id/txt_fdbck"
            android:inputType="textMultiLine"
            android:background="@drawable/border3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Enter your Ratings."
        android:id="@+id/txt_rating"
        android:layout_below="@+id/text_area"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>
    <RatingBar
        android:id="@+id/ofcr_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_rating"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/ofcr_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0.0"
                android:layout_below="@+id/ofcr_rating"
                android:layout_marginStart="60dp"/>


      <Button
          android:id="@+id/ofcr_submit_btn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/ofcr_rating"
          android:gravity="center"
          android:layout_marginBottom="10dp"
          android:text="Submit"
          android:layout_marginTop="20dp"
          android:background="@drawable/border3"
          android:layout_centerInParent="true"/>

        </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>