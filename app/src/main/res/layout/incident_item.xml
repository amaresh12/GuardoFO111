<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textColor="@color/green"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:text="Open"/>

    <TextView
        android:id="@+id/unit_nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:text="UnitName: "
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp" />
        <TextView
            android:id="@+id/edit_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harmony"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/unit_nm"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/intencity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:layout_marginTop="10dp"
            android:layout_below="@+id/unit_nm"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/edit_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total high incident"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/intencity"
            android:layout_below="@+id/edit_unit"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DateTime: "
            android:layout_marginTop="10dp"
            android:layout_below="@+id/intencity"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/edit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/datetime"
            android:layout_below="@+id/edit_high"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/reported"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loged By: "
            android:layout_marginTop="10dp"
            android:layout_below="@+id/datetime"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/reported_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stalwart"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/datetime"
            android:layout_below="@+id/edit_date"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>


        <!--<TextView
            android:id="@+id/incident_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IncidentType: "
            android:layout_marginTop="10dp"
            android:layout_below="@+id/reported"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/incidentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/datetime"
            android:layout_below="@+id/reported_by"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>-->

    </RelativeLayout>
</RelativeLayout>