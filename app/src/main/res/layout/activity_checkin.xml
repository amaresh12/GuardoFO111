<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/checkin_rel"
    android:background="@color/bg_list"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/person_img"
                android:scaleType="fitXY"
                android:background="@color/deep_primary"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/nameIcon"
                android:src="@mipmap/ic_person_white_24dp"
                android:background="@drawable/circle_light_blue_with_white_stroke"
                android:layout_toRightOf="@id/person_img"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                />
            <TextView
                android:id="@+id/fo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_toRightOf="@id/nameIcon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="58dp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/unitIcon"
                android:src="@mipmap/ic_location_city_white_24dp"
                android:background="@drawable/circle_light_pink_with_white_stroke"
                android:layout_toRightOf="@id/person_img"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/nameIcon"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Unit Name"
                android:textColorHint="@color/black"
                android:layout_toRightOf="@id/nameIcon"
                android:layout_below="@id/nameIcon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/addressIcon"
                android:src="@mipmap/ic_location_on_white_24dp"
                android:background="@drawable/circle_light_green_with_white_stroke"
                android:layout_toRightOf="@id/person_img"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/unitIcon"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_toRightOf="@id/nameIcon"
                android:layout_below="@id/unitIcon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"/>
            <!--<ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/purposeIcon"
                android:src="@mipmap/ic_directions_walk_white_24dp"
                android:background="@drawable/circle_light_purple_with_white_stroke"
                android:layout_toRightOf="@id/person_img"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/addressIcon"
                android:layout_marginTop="10dp"
                />
            <Spinner
                android:id="@+id/visit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/nameIcon"
                android:layout_below="@id/addressIcon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp" />-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/loc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="80dp"
                    android:background="@color/colorPrimary"
                    android:text="CONTINUE"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_height="30dp" />
                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="70dp"
                    android:background="@color/red1"
                    android:text="Logout"
                    android:layout_marginLeft="30dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_height="30dp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>



