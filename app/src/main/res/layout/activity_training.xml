<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linn">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:id="@+id/layout_checkin">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/training_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher_round"
                android:layout_marginTop="0dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text=" 1. Alertness / Turnout"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="30dp"
                    android:id="@+id/imgbt_alertmin"
                    android:src="@mipmap/ic_remove_white_24dp"
                    android:layout_height="match_parent"
                    android:background="@color/commentcolour"
                    />
                <EditText
                    android:layout_width="150dp"
                    android:text="Good"
                    android:focusable="false"
                    android:gravity="center"
                    android:id="@+id/et_alert"
                    android:background="@drawable/customcomment"
                    android:layout_height="match_parent"
                    />
                <ImageButton
                    android:layout_width="30dp"
                    android:id="@+id/imgbt_alertplus"
                    android:src="@mipmap/ic_add_white_24dp"
                    android:layout_height="match_parent"
                    android:background="@color/commentcolour"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_comment_alert"
                android:hint="Comments"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=" 2. Client Satisfaction"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="30dp"
                    android:id="@+id/imgbt_staisfymin"
                    android:src="@mipmap/ic_remove_white_24dp"
                    android:layout_height="match_parent"
                    android:background="@color/commentcolour"
                    />
                <EditText
                    android:layout_width="150dp"
                    android:text="Good"
                    android:id="@+id/et_satisfy"
                    android:gravity="center"
                    android:focusable="false"
                    android:background="@drawable/customcomment"
                    android:layout_height="match_parent"
                    />
                <ImageButton
                    android:layout_width="30dp"
                    android:id="@+id/imgbt_staisfyplus"
                    android:src="@mipmap/ic_add_white_24dp"
                    android:layout_height="match_parent"
                    android:background="@color/commentcolour"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_comment_satis"
                android:hint="Comments"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=" 3. Incident / Issues"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="30dp"
                    android:id="@+id/imgbt_issuemin"
                    android:src="@mipmap/ic_remove_white_24dp"
                    android:layout_height="match_parent"
                    android:background="@color/commentcolour"
                    />
                <EditText
                    android:layout_width="150dp"
                    android:text="Good"
                    android:gravity="center"
                    android:focusable="false"
                    android:id="@+id/et_issue"
                    android:background="@drawable/customcomment"
                    android:layout_height="match_parent"
                    />
                <ImageButton
                    android:layout_width="30dp"
                    android:id="@+id/imgbt_issueplus"
                    android:src="@mipmap/ic_add_white_24dp"
                    android:layout_height="match_parent"
                    android:background="@color/commentcolour"/>
                </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_comment_issue"
                android:hint="Comments"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=" 4. Job Knowledge"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="30dp"
                        android:id="@+id/imgbt_jobminus"
                        android:src="@mipmap/ic_remove_white_24dp"
                        android:layout_height="match_parent"
                        android:background="@color/commentcolour"
                        />
                    <EditText
                        android:layout_width="150dp"
                        android:text="Good"
                        android:gravity="center"
                        android:focusable="false"
                        android:id="@+id/et_jb"
                        android:background="@drawable/customcomment"
                        android:layout_height="match_parent"
                        />
                    <ImageButton
                        android:layout_width="30dp"
                        android:id="@+id/imgbt_jbplus"
                        android:src="@mipmap/ic_add_white_24dp"
                        android:layout_height="match_parent"
                        android:background="@color/commentcolour"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_comment_jb"
                android:hint="Comments"/>

            <Button
                android:id="@+id/trng_submit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:background="@color/commentcolour"
                android:text="Submit"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>