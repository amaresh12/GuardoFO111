    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relati"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="3dp">



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/ic_launcher_round"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="0dp"/>
            <ImageView
                android:layout_below="@+id/img"
                android:id="@+id/person_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:visibility="gone"
                android:layout_marginLeft="60dp"
                android:background="@mipmap/ic_person_black_24dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:hint="Officer's Name"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/name"
                android:textColorHint="@color/black"

                android:textColor="#000000"/>



    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relati"
            android:id="@+id/tab"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:background="@color/deep_blue">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ofcr_report"
                android:text="Officer Report"
                android:layout_marginLeft="10dp"
                android:paddingLeft="35dp"
                android:backgroundTint="@color/white"

                android:paddingRight="35dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custmr_fdbck"
                android:text="Customer Feddback"
                android:backgroundTint="@color/white"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/ofcr_report"/>




        </RelativeLayout>

