<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    tools:context="androidapp.com.stalwartsecurity.Activity.ResidentHome">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@color/colorWhite"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/button_selector_qa"
            android:id="@+id/headlin1">
         <ImageView
             android:layout_width="60dp"
             android:layout_height="match_parent"
             android:id="@+id/imagepic"
             android:background="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imagepic"
                android:layout_marginLeft="20dp"
                android:singleLine="true"
                android:id="@+id/res_name"
                android:textColor="#000000"
                android:text="Amaresh Samantaray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imagepic"
                android:layout_marginLeft="20dp"
                android:id="@+id/res_phone"
                android:singleLine="true"
                android:layout_below="@id/res_name"
                android:text="909040350"
                />
            <TextView
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imagepic"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/res_phone"
                android:text="Flat: 102,Harmony"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/dashlin1"
            android:layout_marginTop="20dp"
            android:layout_below="@id/headlin1"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:id="@+id/invite"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/light_red"
                android:layout_height="120dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_person_add_black_24dp"
                    android:backgroundTint="@color/red"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Invite Visitors"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>
                </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/permission"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/light_colorPrimary"
                android:layout_height="120dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_swap_horiz_black_24dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Permit Visitors"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/dashlin2"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/dashlin1"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/con_security"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/light_green">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/ic_security_black_24dp"
                    android:backgroundTint="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Notify Security"
                    android:textColor="@color/green"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/optional"
                app:cardBackgroundColor="@color/light_pink"
                android:layout_height="120dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_notifications_none_black_24dp"
                    android:backgroundTint="@color/pink"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Notifications"
                    android:textColor="@color/pink"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
