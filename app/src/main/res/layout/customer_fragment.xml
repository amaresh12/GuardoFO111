<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fedbck">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signatore_form"
                android:visibility="gone">
                <include android:id="@+id/signature"
                    layout="@layout/signator"></include>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reason_form"
                android:visibility="gone">
                <include android:id="@+id/reason"
                    layout="@layout/reason"></include>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fedbck_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Type"
                    android:layout_marginTop="0dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp" />

                <EditText
                    android:id="@+id/customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Enter Name"
                    android:singleLine="true"
                    android:layout_below="@+id/textView"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/customedittext"
                    />


                <TextView
                    android:id="@+id/unit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/customer_name"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:text="Designation"/>



                <EditText
                    android:id="@+id/customer_designation"
                    android:layout_below="@+id/unit_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Designation"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/customedittext"
                    />
                <TextView
                    android:id="@+id/txt_ratings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Enter your Ratings"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/customer_designation"/>
               <RatingBar
                   android:id="@+id/customer_ratings"
                   android:layout_below="@+id/txt_ratings"
                   android:layout_width="wrap_content"
                   android:layout_height="50dp"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/rating_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:hint="0.0"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/customer_ratings"/>


                <Button
                    android:id="@+id/fdbck_next"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="NEXT"
                    android:textStyle="bold"
                    android:layout_below="@id/rating_value"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:background="@drawable/border3"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>