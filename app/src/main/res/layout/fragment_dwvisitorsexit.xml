<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="androidapp.com.stalwartsecurity.Fragment.Visitorsexit">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/visiorslist_rel"
        android:background="@color/background"
        android:layout_height="match_parent">
        <SearchView
            android:id="@+id/visitorsDSearch"
            android:layout_width="wrap_content"
            android:background="@color/background"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="40dp"
            android:id="@+id/exitDateswipe"
            android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:id="@+id/visitorsList">
        </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="No visitors found"
            android:layout_centerHorizontal="true"
            android:id="@+id/no_viritors"
            android:visibility="gone"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:text="Select Date"
            android:id="@+id/selcetDate"/>
    </RelativeLayout>


</FrameLayout>
